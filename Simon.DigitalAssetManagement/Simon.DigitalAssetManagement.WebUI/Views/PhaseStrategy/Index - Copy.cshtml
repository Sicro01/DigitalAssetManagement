@model Simon.DigitalAssetManagement.Application.PhaseStrategies.Queries.GetPhaseStrategies.PhasesStrategiesVm
<div class="row">
    <div class="col-4">
        <div class="ml-3 p-1 border">
            <div class="row justify-content-between m-1">
                <h2 class="text-dark">Phases</h2>
                <a asp-action="CreatePhase" class="btn btn-primary text-white">Create Phase</a>
            </div>
            <div class="row m-0">
                <div class="w-100">
                    <form method="post">
                        @Html.HiddenFor(m => m.PhaseList.FirstOrDefault().Id)
                        <div class="">
                            <table class="table table-striped table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col" class="text-center">
                                            <label asp-for="PhaseList.FirstOrDefault().Name"></label>
                                        </th>
                                        <th scope="col" class="text-center">
                                            <label asp-for="PhaseList.FirstOrDefault().StartDate"></label>
                                        </th>
                                        <th scope="col" class="text-center">
                                            <label asp-for="PhaseList.FirstOrDefault().EndDate"></label>
                                        </th>
                                        <th scope="col" class="text-center">
                                            <label>Manage</label>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var phase in Model.PhaseList)
                                    {
                                        <tr>
                                            <th scope="row" class="font-weight-normal">@Html.DisplayFor(m => phase.Name)</th>
                                            <td>
                                                @Html.DisplayFor(m => phase.StartDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => phase.EndDate)
                                            </td>
                                            <td class="d-flex justify-content-around">
                                                <a asp-action="EditPhase" asp-route-id="@phase.Id" class="btn btn-success float-right">Edit</a>
                                                <a asp-action="DeletePhase" asp-route-id="@phase.Id" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row col-1 p-0 m-0 border">
    </div>
    <div class="row col-7 p-1 m-0 border">
        <h2 class="text-dark">Phase Strategies</h2>
    </div>
    <div class="row m-0">
        <div class="w-100">
            @*<form method="post">*@
                @Html.HiddenFor(m => m.PhaseStrategyList.FirstOrDefault().Id)
                <div class="">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col" class="text-center">
                                    <label asp-for="PhaseStrategyList.FirstOrDefault().Phase.Name"></label>
                                </th>
                                <th scope="col" class="text-center">
                                    <label asp-for="PhaseStrategyList.FirstOrDefault().Strategy.Name"></label>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var phaseStrategy in Model.PhaseStrategyList)
                            {
                                <tr>
                                    <th scope="row" class="font-weight-normal">@Html.DisplayFor(m => phaseStrategy.Phase.Name)</th>
                                    <td>
                                        @Html.DisplayFor(m => phaseStrategy.Strategy.Name)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            @*</form>*@
        </div>
    </div>
</div>

<br />

