@model Simon.DigitalAssetManagement.Application.Phases.Queries.GetPhases.PhaseVm

<div class="row">
    <div class="col-11">
        <h2 class="text-dark">Edit Phase</h2>
    </div>
</div>
<br />
<div class="">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.PhaseDto.Id)
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-center" style="width: 35%;">
                        <label asp-for="PhaseDto.Name"></label>
                    </th>
                    <th scope="col" class="text-center" style="width: 25%;">
                        <label asp-for="PhaseDto.StartDate"></label>
                    <th scope="col" class="text-center" style="width: 25%;">
                        <label asp-for="PhaseDto.EndDate"></label>
                    </th>
                    <th scope="col" class="text-center" style="width: 15%;">
                        <label>Manage Phase</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input asp-for="PhaseDto.Name" class="form-control" />
                        <span asp-validation-for="PhaseDto.Name" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="PhaseDto.StartDate" class="form-control" />
                        <span asp-validation-for="PhaseDto.StartDate" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="PhaseDto.EndDate" class="form-control" />
                        <span asp-validation-for="PhaseDto.EndDate" class="text-danger"></span>
                    </td>
                    <td class="d-flex justify-content-around">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="submit" formaction=@Url.Action("Cancel") class="btn btn-primary">Cancel</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}